<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if (auths.length > 0) { %>
                    <section>
                        <h1 class=" category__title_admin m-top-1">
                            Admin authors list
                        </h1>
                        <hr>
                        <div class="grid">
                        <% for (let author of auths) { %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%= author.name %>
                                    </h1>
                                </header>
                                <div class="card__image">
                                    <img src="<%= author.imageUrl %>" alt="<%= author.name %>">
                                </div>
                                <div class="card__content">
                                    <p class="product__description">
                                        <%= author.description %>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    <a href="/admin/edit-author/<%= author._id %>?edit=true" class="btn">Edit</a>
                                    <form action="/admin/delete-author" method="POST">
                                        <input type="hidden"  name="_csrf" value="<%= csrfToken %>">
                                        <input type="hidden" value="<%= author._id %>" name="authorId">
                                        <button class="btn" type="submit">Delete</button>
                                    </form>

                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Products Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>