<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <section class="grid">
            <article class="masthead">
                <h1 class="tc-sec masthead_text">Welcome to our publishing house</h1>
                <p class="tc-sec masthead_text">
                    As Franz Kafka said: <cite title="Letters to Friends, Family by Franz Kafka">A book must be the axe for the frozen sea within us. That is my belief</cite>
                </p>
            </article>
        </section>

        <% if (prods.length > 0) { %>
            <section class="">
                <h1 class="category__title"> New in store </h1>
                <div class="grid">
                <% for (let product of prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= product.imageUrl %>"
                                alt="<%= product.title %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= product.price %></h2>
                            <hr>
                            <p class="product__description"><%= product.description %></p>
                        </div>
                        <div class="card__actions">
                                <a href="/products/<%= product._id %>" class="btn tc-main">Details</a>
                            <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                        </div>
                    </article>
                    <% } %>
                </div>
                </section>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>